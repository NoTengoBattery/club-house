<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Post</th>
      <th scope="col">User</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td scope="row"><%= post.post %></td>
        <td><%= show_user(post) %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
